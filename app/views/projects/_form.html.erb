<div class="container">
  <div class="row">
    <div class="well col-md-5">
      <%=form_for obj do |f| %>
        <div class="form-group">
          <%=f.label :title %>
          <%=f.text_field :title, class: "form-control"%>
        </div>
        <div class="form-group">
          <%=f.label :description %>
          <%=f.text_field :description, class: "form-control" %>
        </div>
        <%=f.submit "Register", class: 'btn btn-success' %>
      <%end%>
    </div>
  </div>
</div>