<div id = 'create-project-form' class="<%=display%> container">
  <div class="row">
    <div class=" well col-md-5">
        <%=form_for obj, remote: is_remote do |f| %>
          <div class="form-group">
            <%=f.label :title %>
            <%=f.text_field :title, class: "form-control"%>
          </div>
          <div class="form-group">
            <%=f.label :description %>
            <%=f.text_area :description, :size => "30x5", class: "form-control" %>
          </div>
          <p>Choose a label:</p>
          <div class="form-group">
            <%= f.radio_button :category, "red", :id=>"red" %>
            <label for="red" class="radio-label">Red</label>

            <%= f.radio_button :category, "blue", :id=>"blue"%>
            <label for="blue" class="radio-label">Blue</label>

            <%= f.radio_button :category, "green", :id=>"green"%>
            <label for="green" class="radio-label">Green</label>

            <%= f.radio_button :category, "yellow", :id=>"third"%>
            <label for="yellow" class="radio-label">Yellow</label>

            <%= f.radio_button :category, "brown", :id=>"third"%>
            <label for="brown" class="radio-label">Brown</label>
          </div>
          <%=f.submit action, class: 'btn btn-default' %>
        <%end%>
    </div>
  </div>
</div>