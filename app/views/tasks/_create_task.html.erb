<div class="row">
  <div class="col-md-5">
    <%=form_for [@project, @task], remote: true do |f| %>
      <div class="form-group">
        <%=f.label :task_name %>
        <%=f.text_field :task_name, class: "form-control"%>
      </div>
      <div class="form-group">
        <%=f.label :deadline %>
        <%=date_select :task, :deadline, class: "form-control" %>
      </div>
      <%=f.submit "Create task", class: 'btn btn-info' %>
    <%end%>
  </div>
  <div class="col-md-3">
    <form action="">
      <input type="checkbox" id = "hide-completed" name="vehicle" value="Car"><span id = 'checkbox-label'> Hide completed tasks</span>
    </form>
  </div>
</div> 